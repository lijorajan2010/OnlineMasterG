@using OnlineMasterG.CommonFramework

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<script>
    var URL = {
        QUIZUPLOADLIST: '@Url.Action("QuizUploadList", "DailyQuizUpload")',
        DELETEQUIZUPLOAD: '@Url.Action("DeleteQuizUpload", "DailyQuizUpload")',
        APPROVEQUIZUPLOAD: '@Url.Action("ApproveQuizUpload", "DailyQuizUpload")',
        DENYQUIZUPLOAD: '@Url.Action("DenyQuizUpload", "DailyQuizUpload")',
        BINDSUBJECTS: '@Url.Action("BindSubjects", "DailyQuizUpload")',
        BINDQUIZ: '@Url.Action("BindQuiz", "DailyQuizUpload")',
    };
</script>
<script type="text/javascript" src="@Url.Content("~/Scripts/CustomScript/DailyQuizUpload.js?v=" + AppInfo.Version)"></script>



<div class="app-main__inner">
    <div class="app-page-title">
        <div class="text-right">
            @Html.ActionLink("Download Sample", "DownloadSample", "DailyQuizUpload", new { }, new { @class = "btn btn-alternate" })
        </div>
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="pe-7s-car icon-gradient bg-mean-fruit">
                    </i>
                </div>
                <div>
                    Upload Quiz
                    <!--  <div class="page-title-subheading">This is an example dashboard created using build-in elements and components.
                    </div> -->
                </div>

            </div>

        </div>
    </div>

    <div class="tabs-animation">
        <div class="mb-3 card">
            <div class="card-header-tab card-header">
                <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                    <i class="header-icon lnr-charts icon-gradient bg-happy-green"> </i>
                    Upload Quiz
                </div>
                <!-- <div class="btn-actions-pane-right text-capitalize">
                    <button class="btn-wide btn-outline-2x mr-md-2 btn btn-outline-focus btn-sm">View All</button>
                </div> -->
            </div>
            <div class="no-gutters row">
                <div class="col-md-12">
                    @using (Html.BeginForm("SaveQuizUpload", "DailyQuizUpload", FormMethod.Post, new { id = "frmDailyQuizUpload", autocomplete = "off", @enctype = "multipart/form-data" }))
                    {
                        <div class="card-body table-responsive">
                            <table style="width: 100%;" id="example12" class="table table-hover table-striped table-bordered">

                                <tbody>
                                    <tr>
                                        <th> Select Course</th>
                                        <th> Select Subject</th>
                                        <th> Select Quiz</th>

                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DropDownList("DailyQuizCourseId", (SelectList)ViewBag.CourseList, "Please Select", new { @id = "CourelistId", @class = "form-control", @required = "required" })
                                            <input type="hidden" id="hdfQuizUploadId" name="QuizUploadId" />
                                        </td>
                                        <td>
                                            @Html.DropDownList("DailyQuizSubjectId", new SelectList(Enumerable.Empty<SelectListItem>()), "Please Select", new { @id = "SubjectlistId", @class = "form-control", @required = "required" })
                                        </td>
                                        <td>
                                            @Html.DropDownList("DailyQuizId", new SelectList(Enumerable.Empty<SelectListItem>()), "Please Select", new { @id = "QuizlistId", @class = "form-control", @required = "required" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">Excel Upload</th>
                                        <th>Action</th>
                                    </tr>
                                    <tr>

                                        <td colspan="2">
                                            <input type="file" id="uploadExcel" class="btn-shine btn btn-focus" name="postedFile" accept=".xls, .xlsx" required>
                                        </td>

                                        <td>
                                            <button class="btn btn-info" type="button" id="btnSave">Save </button>
                                            <button class="btn btn-alternate" id="btnClear" type="button">Clear </button>
                                        </td>
                                    </tr>
                                </tbody>


                            </table>
                        </div>
                    }
                </div>
            </div>

        </div>

        <div class="card mb-3">

            <hr />
            <div id="divValidationMsg">
            </div>


            <div class="card-body table-responsive">
                <div id="dvQuizUploadList"></div>


            </div>
        </div>

    </div>
</div>