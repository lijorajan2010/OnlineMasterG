@using OnlineMasterG.CommonFramework

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<script>
    var URL = {
        SUBJECTLIST: '@Url.Action("SubjectList", "SubjectMaster")',
        DELETESSUBJECT: '@Url.Action("DeleteSubject", "SubjectMaster")',
        BINDCATEGORY: '@Url.Action("BindCategory", "SubjectMaster")',
        BINDSECTIONS: '@Url.Action("BindSections", "SubjectMaster")',
        BINDTESTS: '@Url.Action("BindTests", "SubjectMaster")',
    };
</script>
<script type="text/javascript" src="@Url.Content("~/Scripts/CustomScript/SubjectMaster.js?v=" + AppInfo.Version)"></script>



<div class="app-main__inner">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="pe-7s-car icon-gradient bg-mean-fruit">
                    </i>
                </div>
                <div>
                    Subject Master
                    <!--  <div class="page-title-subheading">This is an example dashboard created using build-in elements and components.
                    </div> -->
                </div>
            </div>

        </div>
    </div>

    <div class="tabs-animation">
        <div class="mb-3 card">
            <div class="card-header-tab card-header">
                <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                    <i class="header-icon lnr-charts icon-gradient bg-happy-green"> </i>
                    Add Subject
                </div>
                <!-- <div class="btn-actions-pane-right text-capitalize">
                    <button class="btn-wide btn-outline-2x mr-md-2 btn btn-outline-focus btn-sm">View All</button>
                </div> -->
            </div>
            <div class="no-gutters row">
                <div class="col-md-12">
                    @using (Html.BeginForm("SaveSubject", "SubjectMaster", FormMethod.Post, new { id = "frmSubjectMaster", autocomplete = "off" }))
                    {
                        <div class="card-body table-responsive">
                            <table style="width: 100%;" id="example12" class="table table-hover table-striped table-bordered">

                                <tbody>
                                    <tr>
                                        <th> Select Course</th>
                                        <th> Select Category</th>
                                        <th> Select Section</th>

                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DropDownList("CourseName", (SelectList)ViewBag.CourseList, "Please Select", new { @id = "CourelistId", @class = "form-control", @required = "required" })
                                        </td>
                                        <td>
                                            @Html.DropDownList("CategoryName", new SelectList(Enumerable.Empty<SelectListItem>()),"Please Select", new { @id = "CategorylistId", @class = "form-control", @required = "required" })
                                        </td>
                                        <td>
                                            @Html.DropDownList("SectionName", new SelectList(Enumerable.Empty<SelectListItem>()),"Please Select", new { @id = "SectionlistId", @class = "form-control", @required = "required" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <th> Select Test</th>
                                        <th>Subject Name</th>
                                        <th>Sequence</th>
                                    </tr>
                                    <tr>

                                        <td>
                                            @Html.DropDownList("TestName", new SelectList(Enumerable.Empty<SelectListItem>()), "Please Select", new { @id = "TestlistId", @class = "form-control", @required = "required" })
                                        </td>
                                        <td>
                                            <input type="hidden" id="hdfSubjectId" />
                                            <input type="text" required id="txtSubjectName" name="SubjectName" class="form-control" value="">

                                        </td>

                                        <td>
                                            <input type="number" required id="txtSequence" name="Sequence" class="form-control" value="">

                                        </td>
                                    </tr>
                                    <tr>
                                        <th colspan="3"> Action</th>
                                    </tr>
                                    <tr>
                                        <td colspan="3">
                                            <button class="btn btn-info" type="button" id="btnSave">Save </button>
                                            <button class="btn btn-alternate" id="btnClear" type="button">Clear </button>
                                        </td>
                                    </tr>



                                </tbody>


                            </table>
                        </div>
                    }
                </div>
            </div>

        </div>

        <div class="card mb-3">

            <hr />
            <div id="divValidationMsg">
            </div>


            <div class="card-body table-responsive">
                <div id="dvSubjectList"></div>


            </div>
        </div>

    </div>
</div>



