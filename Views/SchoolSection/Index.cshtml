@using OnlineMasterG.CommonFramework
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<script>
    var URL = {
        SECTIONLIST: '@Url.Action("SectionList", "SchoolSection")',
        DELETESECTION: '@Url.Action("DeleteSection", "SchoolSection")',
        BINDSUBJECTS: '@Url.Action("BindSubjects", "SchoolSection")',
    };
</script>
<script type="text/javascript" src="@Url.Content("~/Scripts/CustomScript/SchoolSection.js?v=" + AppInfo.Version)"></script>



<div class="app-main__inner">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="pe-7s-car icon-gradient bg-mean-fruit">
                    </i>
                </div>
                <div>
                    Section Master
                    <!--  <div class="page-title-subheading">This is an example dashboard created using build-in elements and components.
                    </div> -->
                </div>
            </div>

        </div>
    </div>

    <div class="tabs-animation">
        <div class="mb-3 card">
            <div class="card-header-tab card-header">
                <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                    <i class="header-icon lnr-charts icon-gradient bg-happy-green"> </i>
                    Add Section
                </div>
                <!-- <div class="btn-actions-pane-right text-capitalize">
                    <button class="btn-wide btn-outline-2x mr-md-2 btn btn-outline-focus btn-sm">View All</button>
                </div> -->
            </div>
            <div class="no-gutters row">
                <div class="col-md-12">
                    @using (Html.BeginForm("SaveSection", "SchoolSection", FormMethod.Post, new { id = "frmSchoolSection", autocomplete = "off" }))
                    {
                        <div class="card-body table-responsive">
                            <table style="width: 100%;" id="example12" class="table table-hover table-striped table-bordered">

                                <tbody>
                                    <tr>
                                        <th> Select Class</th>
                                        <th> Select Subject</th>
                                        <th> Section Name</th>

                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DropDownList("ClassName", (SelectList)ViewBag.ClassList, "Please Select", new { @id = "ClasslistId", @class = "form-control", @required = "required" })

                                        </td>
                                        <td>
                                            @Html.DropDownList("SubjectName", new SelectList(Enumerable.Empty<SelectListItem>()), "Please Select", new { @id = "SubjectlistId", @class = "form-control", @required = "required" })

                                        </td>
                                        <td>
                                            <input type="hidden" id="hdfSectionId" />
                                            <input type="text" required id="txtSectionName" name="SectionName" class="form-control" value="">

                                        </td>
                                    </tr>
                                    <tr>
                                        <th colspan="2"> Description</th>
                                        @*<th>Is Active</th>*@
                                        <th>Action</th>
                                    </tr>
                                    <tr>

                                        <td colspan="2">
                                            <input type="text" required id="txtSectionDescription" name="Description" class="form-control" value="">
                                        </td>

                                        <td>
                                            <button class="btn btn-info" type="button" id="btnSave">Save </button>
                                            <button class="btn btn-alternate" id="btnClear" type="button">Clear </button>
                                        </td>

                                    </tr>



                                </tbody>

                            </table>
                        </div>
                    }
                </div>
            </div>

        </div>

        <div class="card mb-3">

            <hr />
            <div id="divValidationMsg">
            </div>


            <div class="card-body table-responsive">
                <div id="dvSectionList"></div>


            </div>
        </div>

    </div>
</div>


