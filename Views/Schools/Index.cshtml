<section class="service_area sec_pad s_service_section breadcrumb_area typography_breacrumb" style="padding-top: 30px;">
    <img class="breadcrumb_shap" alt="" src="img/breadcrumb/banner_bg.png">
    <div class="container custom_container test_details">
        <div class="row m_0">
            <div class="col-lg-3 col-md-3 m_p0">

                <ul class="nav nav-tabs software_service_tab" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link"><h5>Classes</h5></a>
                    </li>
                    @if (AppInfo.GetClasses != null)
                    {
                        foreach (var item in AppInfo.GetClasses.Select((x, y) => new { Data = x, Index = y }))
                        {
                            if (item.Index == 0)
                            {
                                var btnId = "btn" + item.Index;
                                var dvId = "dvId" + item.Index;
                                <li class="nav-item tab"> 
                                    <button id="@btnId" class="tablinks nav-link active lstbtns" onclick="openClass(event, '@dvId')">@item.Data.ClassName</button>
                                    @*<a class="nav-link active tab" href="#">@item.Data</a>*@
                                </li>
                            }
                            else
                            {
                                var btnId = "btn" + item.Index;
                                var dvId = "dvId" + item.Index;
                                <li class="nav-item tab">
                                    <button id="@btnId" class="tablinks nav-link lstbtns" onclick="openClass(event, '@dvId')">@item.Data.ClassName</button>
                                    @*<a class="nav-link tab" href="#">@item.Data</a>*@
                                </li>
                            }

                        }
                    }



                </ul>
                <br />
                <br />
                <br />
            </div>


            @if (AppInfo.GetClasses != null)
            {
                foreach (var cls in AppInfo.GetClasses.Select((x, y) => new { Data = x, Index = y }))
                {
                    var dvId = "dvId" + cls.Index;
                     var firstItem = string.Empty;
                    <div class="col-md-9 tabcontent" id="@dvId">
                        <div class="sec_title">
                            @if (AppInfo.GetSchoolSubjects != null)
                            {
                               
                                foreach (var item in AppInfo.GetSchoolSubjects.Where(m => m.ClassId == cls.Data.ClassId).ToList().Select((x, y) => new { Data = x, Index = y }))
                                {
                                    var subjectbtn = "SubjectBtn" + item.Index;
                                    var subjectDivId = "SubjectDivId" + item.Index;
                                    if (item.Index == 0)
                                    {
                                        firstItem = item.Data.SubjectName;
                                        <button id="@subjectbtn" class="tablinksSubject agency_banner_btn" onclick="openSubject(event, '@subjectDivId')">@item.Data.SubjectName</button>
                                    }
                                    else
                                    {
                                        <button id="@subjectbtn" class="tablinksSubject btn_get" onclick="openSubject(event, '@subjectDivId')">@item.Data.SubjectName</button>

                                    }

                                }
                             
                                <h4 id="selectedSubjectName" style="margin-top:20px;" class="f_p f_700 t_color2 mt_20">@firstItem</h4>
                            }

                        </div>

                        @if (AppInfo.GetSchoolSubjects != null)
                        {
                            foreach (var main in AppInfo.GetSchoolSubjects.Where(m => m.ClassId == cls.Data.ClassId).ToList().Select((x, y) => new { Data = x, Index = y }))
                            {
                                var subjectDivIdOndiv = "SubjectDivId" + main.Index;
                                <div class="tabcontentSubjects" id="@subjectDivIdOndiv">

                                    @if (AppInfo.GetSchoolSubjects != null)
                                    {
                                        foreach (var sub in AppInfo.GetSchoolSubjects.Where(m => m.ClassId == cls.Data.ClassId && main.Data.SubjectId == m.SubjectId).ToList().Select((x, y) => new { Data = x, Index = y }))
                                        {

                                            @*<div class="tabcontentSubjects" id="@subjectDivIdOndiv">*@

                                            <ul class="nav nav-tabs develor_tab mb_15" id="myTab2" role="tablist">

                                                @if (AppInfo.GetSchoolSections != null)
                                                {
                                                    foreach (var item in AppInfo.GetSchoolSections.Where(m => m.ClassId == cls.Data.ClassId && sub.Data.SubjectId == m.SubjectId).ToList().Select((x, y) => new { Data = x, Index = y }))
                                                    {
                                                        string hrefTab = string.Empty;
                                                        string idTab = string.Empty;
                                                        if (item.Index == 0)
                                                        {
                                                            hrefTab = "href_ruby" + item.Index;
                                                            idTab = "Id_ruby_tab" + item.Index;
                                                            <li class="nav-item">
                                                                <button id="@idTab" class="tablinksSections nav-link active" onclick="openSection(event, '@hrefTab')">@item.Data.SectionName</button>
                                                                @*<a class="nav-link active show" data-tab="tab_@item.Index" id="@idTab" data-toggle="tab" href="@hrefTab" role="tab" aria-controls="ruby" aria-selected="true">@item.Data.SectionName</a>*@
                                                            </li>
                                                        }
                                                        else
                                                        {
                                                            hrefTab = "href_ruby" + item.Index;
                                                            idTab = "Id_ruby_tab" + item.Index;
                                                            <li class="nav-item">

                                                                <button id="@idTab" class="tablinksSections nav-link" onclick="openSection(event, '@hrefTab')">@item.Data.SectionName</button>

                                                                @*<a class="nav-link" data-tab="tab_@item.Index" id="@idTab" data-toggle="tab" href="@hrefTab" role="tab" aria-controls="ruby" aria-selected="false">@item.Data.SectionName</a>*@
                                                            </li>
                                                        }
                                                    }
                                                }
                                            </ul>

                                        }
                                    }




                                    @if (AppInfo.GetSchoolSubjects != null)
                                    {
                                        foreach (var sub in AppInfo.GetSchoolSubjects.Where(m => m.ClassId == cls.Data.ClassId).ToList().Select((x, y) => new { Data = x, Index = y }))
                                        {
                                            if (AppInfo.GetSchoolSections != null)
                                            {

                                                string hrefTabId = string.Empty;
                                                foreach (var sec in AppInfo.GetSchoolSections.Where(m => m.ClassId == cls.Data.ClassId && sub.Data.SubjectId == m.SubjectId).ToList().Select((x, y) => new { Data = x, Index = y }))
                                                {

                                                    hrefTabId = "href_ruby" + sec.Index;
                                                    if (AppInfo.GetSchoolPapers != null)
                                                    {
                                                        <div class="tab-content">
                                                            <div class="tab-pane developer_tab_content Section" id="@hrefTabId">
                                                                <div class="accordion">
                                                                    <div class="service_info">
                                                                        <div class="service_item  mb-0">
                                                                            @foreach (var pap in AppInfo.GetSchoolPapers.Where(m => m.ClassId == cls.Data.ClassId && sub.Data.SubjectId == m.SubjectId && m.SectionId == sec.Data.SectionId).ToList().Select((x, y) => new { Data = x, Index = y }))
                                                                            {
                                                                                <div class="mb_10">
                                                                                    <div class="row m-0 border_b">
                                                                                        <div class="col-md-4 col-md-4 col-xs-4">
                                                                                            <h4 class="f_600 f_size_18 l_height28 t_color2 m-0">@pap.Data.PaperName</h4>
                                                                                        </div>
                                                                                        <div class="col-md-4 col-md-4 col-xs-4">
                                                                                            <h4 class="f_600 f_size_18 l_height28 t_color2 m-0">@pap.Data.Description</h4>
                                                                                        </div>
                                                                                        <div class="col-md-4 col-md-4 col-xs-4">
                                                                                            @Html.ActionLink(" View ", "View", "DataFile", new { p = CustomEncrypt.Encrypt(pap.Data.DataFileId.Value.ToString()) }, new { @class = "btn_hover agency_banner_btn", @target = "_blank" })
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                            }
                                        }
                                    }
                                    <br />
                                    <br />
                                </div>


                            }
                        }
                    </div>
                }
            }
        </div>

    </div>


</section>
<style>
    .nav-tabs {
        border-bottom: 0px;
    }

    body {
        font-family: Arial;
    }

    /* Style the tab */
    .tab {
        overflow: hidden;
        /*border: 1px solid #ccc;
        background-color: #f1f1f1;*/
    }

        /* Style the buttons inside the tab */
        .tab button {
            background-color: inherit;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
            font-size: 17px;
        }

            /* Change background color of buttons on hover */
            .tab button:hover {
                background-color: #ddd;
            }

            /* Create an active/current tablink class */
            .tab button.active {
                background-color: #ccc;
            }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        /*border: 1px solid #ccc;*/
        border-top: none;
    }

    .tabcontentSubjects {
        display: none;
        padding: 6px 12px;
        /*border: 1px solid #ccc;*/
        border-top: none;
    }

    .Section {
        display: none;
        padding: 6px 12px;
        /*border: 1px solid #ccc;*/
        border-top: none;
    }
</style>
<script type="text/javascript">


    $(document).ready(function () {

        $("#btn0").click();
        $("#SubjectBtn0").click();
        $("#Id_ruby_tab0").click();

    });

    function openClass(evt, className) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }

        document.getElementById(className).style.display = "block";
        evt.target.className += " active";
    }

    function openSubject(evt, className) {

        var i, tabcontent, tablinks, closesthdfval;
        tabcontent = document.getElementsByClassName("tabcontentSubjects");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinksSubject");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" agency_banner_btn", " btn_get");
        }
        debugger;

        document.getElementById(className).style.display = "block";
        evt.target.className.replace(" btn_get", " agency_banner_btn");

        closesthdfval = $(evt.target).text();
        $("#selectedSubjectName").text(closesthdfval);


    }

    function openSection(evt, className) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("Section");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinksSections");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }

        document.getElementById(className).style.display = "block";
        evt.target.className += " active";
    }
</script>