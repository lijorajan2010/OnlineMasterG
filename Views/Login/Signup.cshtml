
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/PublicLayout.cshtml";
}
    <section class="sign_in_area bg_color sec_pad">
        <div class="container">
            <div class="sign_info">
                <div class="row">
                    <div class="col-lg-5 hidden-sm hidden-xs">
                        <div class="sign_info_content">
                            <h3 class="f_p f_600 f_size_24 t_color3 mb_40">Allready have an account?</h3>
                            <h6 class="text-danger">
                                @ViewBag.Message
                            </h6>
                          
                            <h2 class="f_p f_400 f_size_30 mb-30">Login now	 and<br> start<span class="f_700"> Learning</span><br> with us</h2>
                            <ul class="list-unstyled mb-0">
                                <li><i class="ti-check"></i> All Type of Study Materials </li>
                                <li><i class="ti-check"></i> Exam Updates</li>
                                <li><i class="ti-check"></i> Mock tests</li>
                            </ul>
                            @*<a href="login.html" class="btn btn_three sign_btn_transparent">Log In</a>*@
                            @Html.ActionLink("Log In", "Index", "Login", new { }, new { @class = "btn btn_three sign_btn_transparent" })
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="login_info">
                            <h2 class="f_p f_600 f_size_24 t_color3 mb_40">Register Now</h2>
                            <form method="post" action="@Url.Action("Signup","Login")" class="login-form sign-in-form">
                                <div class="form-group text_box">
                                    <!-- <label class="f_p text_c f_400">Username</label> -->
                                    <input type="text" required name="FirstName" placeholder="First Name">
                                </div>
                                <div class="form-group text_box">
                                    <!-- <label class="f_p text_c f_400">Username</label> -->
                                    <input type="text" required name="LastName" placeholder="Last Name">
                                </div>
                                <div class="form-group text_box">
                                    <!-- <label class="f_p text_c f_400">Email or Phone</label> -->
                                    <input type="text" required name="Login" placeholder="Email">
                                </div>
                                <div class="form-group text_box">
                                    <!-- <label class="f_p text_c f_400">Password</label> -->
                                    <input type="password" required name="Password" placeholder="Password">
                                </div>
                                <div class="extra mb_20">
                                    <div class="checkbox remember">
                                        <label>
                                            <input required type="checkbox"> I agree to terms and conditions of this website
                                        </label>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <button type="submit" class="btn_three">Register</button>
                                    <div class="social_text d-flex ">
                                        <div class="lead-text">Or Register Using</div>
                                        <ul class="list-unstyled social_tag mb-0">
                                            <li><a href="#"><i class="ti-facebook"></i></a></li>

                                            <li><a href="#"><i class="ti-google"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>