
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/PublicLayout.cshtml";
}

    <section class="sign_in_area bg_color sec_pad">
        <div class="container">
            <div class="sign_info">
                <div class="row">
                    <div class="col-lg-5 hidden-sm hidden-xs">
                        <div class="sign_info_content">
                            <h3 class="text-danger">
                                @ViewBag.Message
                            </h3>
                            <h2 class="f_p f_400 f_size_30 mb-30">Forgot Password ?</h2>
                            <br />
                            <h2 class="f_p f_400 f_size_30 mb-30">Don't worry.<br> We are here to help<br></h2>
                            <br />


                            @Html.ActionLink("Register", "Signup", "Login", new { }, new { @class = "btn btn_three sign_btn_transparent", target = "_blank" })
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="login_info">
                            <h2 class="f_p f_600 f_size_24 t_color3 mb_40">Password Reset Request</h2>
                            <form method="post" action="@Url.Action("ForgotPassword","Login")" class="login-form sign-in-form">
                                <div class="form-group text_box">
                                    <input type="text" required name="Email" placeholder="Enter your registered Email">
                                </div>
                             
                           <br>
                           <br>
                           <br>
                                <div class="d-flex justify-content-between align-items-center">
                                    <button type="submit" class="btn_three">Send Request</button>
                              
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

