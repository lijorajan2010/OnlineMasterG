
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/PublicLayout.cshtml";
}

    <section class="sign_in_area bg_color sec_pad">
        <div class="container">
            <div class="sign_info">
                <div class="row">
                    <div class="col-lg-5 hidden-sm hidden-xs">
                        <div class="sign_info_content">
                            <h3 class="f_p f_600 f_size_24 t_color3 mb_40">First time here?</h3>
                            <h6 class="text-danger">
                                @ViewBag.IsInvalid
                            </h6>
                         
                            <h2 class="f_p f_400 f_size_30 mb-30">Join now and start<br> <span class="f_700">Learning</span> with<br> us.</h2>
                            <ul class="list-unstyled mb-0">
                                <li><i class="ti-check"></i> Free Quiz</li>
                                <li><i class="ti-check"></i> Premium Access to all Products</li>
                                <li><i class="ti-check"></i> Free Previous Years Question Papers</li>
                            </ul>
                            @*<a class="btn btn_three sign_btn_transparent" href="signUp.html">Register</a>*@
                            @Html.ActionLink("Register", "Signup", "Login", new { }, new { @class = "btn btn_three sign_btn_transparent", target = "_blank" })
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="login_info">
                            <h2 class="f_p f_600 f_size_24 t_color3 mb_40">Log In</h2>
                            <form method="post" action="@Url.Action("Index","Login")" class="login-form sign-in-form">
                                <div class="form-group text_box">
                                    <!-- <label class="f_p text_c f_400">Email or Phone</label> -->
                                    <input type="text" required name="Login" placeholder="Email">
                                    <input type="hidden"  name="ReturnUrl" placeholder="Email">
                                </div>
                                <div class="form-group text_box">
                                    <!-- <label class="f_p text_c f_400">Password</label> -->
                                    <input type="password" required name="Password" placeholder="Password">
                                </div>
                                <div class="form-group text_box">
                                    @Html.CheckBox("IsRememberMe", true)
                                    <span class="default">Remember me</span>
                                    @*<label class="checkbox">
                                        <input type="checkbox" id="chkRememberMe" name="IsRememberMe" style="text-align:center" />
                                        <span class="default">Remember me</span>
                                    </label>*@
                                </div>
                              
                                <div class="extra mb_20">

                                    <div class="forgotten-password">
                                        @Html.ActionLink("Forgot Password?", "ForgotPassword", "Login", new { }, new { })
                                        @*<a href="#">Forgot Password?</a>*@
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <button type="submit" class="btn_three">Log in</button>
                                    <div class="social_text d-flex ">
                                        <div class="lead-text">Or login using</div>
                                        <ul class="list-unstyled social_tag mb-0">
                                            @*<li><a href="#"><i class="ti-facebook"></i></a></li>*@
                                            <li><a href="#"><i class="ti-google"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>