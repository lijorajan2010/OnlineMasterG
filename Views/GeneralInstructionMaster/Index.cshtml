@using OnlineMasterG.CommonFramework

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<script>
    var URL = {
        INSTRUCTIONLIST: '@Url.Action("InstructionList", "GeneralInstructionMaster")',
        DELETEINSTRUCTION: '@Url.Action("DeleteInstruction", "GeneralInstructionMaster")',
        LOADINSTRUCTIONLIST: '@Url.Action("LoadInstructionList", "GeneralInstructionMaster")',
    };
</script>
<script type="text/javascript" src="@Url.Content("~/Scripts/CustomScript/GeneralInstruction.js?v=" + AppInfo.Version)"></script>



<div class="app-main__inner">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="pe-7s-car icon-gradient bg-mean-fruit">
                    </i>
                </div>
                <div>
                    General Instruction / Setup Marks
                </div>
            </div>

        </div>
    </div>

    <div class="tabs-animation">
        <div class="mb-3 card">
            <div class="card-header-tab card-header">
                <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                    <i class="header-icon lnr-charts icon-gradient bg-happy-green"> </i>
                    Add Instruction / Setup Marks
                </div>
            </div>
            <div class="no-gutters row">
                <div class="col-md-12">
                    @using (Html.BeginForm("SaveInstruction", "GeneralInstructionMaster", FormMethod.Post, new { id = "frmGeneralInstructionMaster", autocomplete = "off" }))
                    {
                        <div class="card-body table-responsive">


                            <table style="width:100%" class="table table-hover table-striped table-bordered">
                                <tr>
                                    <td>
                                        <strong> Select Test</strong> 
                                    </td>
                                    <td>
                                        @Html.DropDownList("TestId", (SelectList)ViewBag.TestList, "Please Select", new { @id = "TestlistId", @class = "form-control", @required = "required" })
                                    </td>
                                </tr>
                            </table>
                            <div id="lstSubjects">

                            </div>
                            <table id="tblSubmit" style="display:none">
                                <tr>

                                    <td colspan="4">
                                        <button class="btn btn-info" type="button" id="btnSave">Save </button>
                                        <button class="btn btn-alternate" id="btnClear" type="button">Clear </button>
                                    </td>
                                </tr>
                            </table>
                         

                        </div>
                    }
                </div>
            </div>

        </div>

        <div class="card mb-3">
            <hr />
            <div id="divValidationMsg">
            </div>
            <div class="card-body table-responsive">
                <div id="tblInstructionList"></div>
            </div>
        </div>
    </div>
</div>

